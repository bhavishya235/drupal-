      'not null' => TRUE,
    ),
    'image_resolution_y' => array(
      'description' => 'resolution of image along y axis:units are defined in image_unit_type',
      'type' => 'int',
      'not null' => TRUE,
    ),
    'image_size' => array(
      'description' => 'size of image in kB',
      'type' => 'int',
      'not null' => TRUE,
    ),
    'image_type' => array(
      'description' => 'image type_UNDEFINED,BILEVEL,GRAYSCALE,GRAYSCALEMATTE,PALETTE,PALETTEMATTE,TRUECOLOR,TRUECOLORMATTE,COLORSEPARATION,COLORSEPARATIONMATTE,OPTIMIZE ',
      'type' => 'varchar',
      'length' => '100',
      'not null' => TRUE,
    ),
    'image_colorSpace' => array(
      'description' => 'TType of color space',
